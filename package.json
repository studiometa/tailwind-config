  },
  "homepage": "https://github.com/studiometa/tailwind-config#readme",
  "devDependencies": {
    "@studiometa/eslint-config": "^2.0.3",
    "@studiometa/prettier-config": "^2.0.0",
    "eslint": "^6.8.0",
    "flat": "^5.0.0",
    "fuzzysort": "^1.1.4",
    "parcel": "^1.12.4",
    "prettier": "^1.19.1",
